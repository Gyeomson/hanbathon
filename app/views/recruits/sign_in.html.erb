<%=render '/header'%>
<div class="bg-darkgray h-92">
    <div class="container recruits-sign_in h-100">
        <div class="main h-100 py-5">
            <div class="form mx-auto p-4 bdr-3 bg-lightgray">
                <h1 class="text-center">로그인</h1>
                <%=simple_form_for(@user, url: recruits_go_path, method: :post, class: '') do |u| %>
                    <div class="text-center">
                        <p>
                            <%=u.label :email, "이메일"%>
                            <%=u.email_field :email, class: 'form-control text-center'%>
                            <div class="form-error error-email"></div>
                        </p>
                        <p>
                            <%=u.label :name, "이름"%>
                            <%=u.text_field :name, class: 'form-control text-center'%>
                            <div class="form-error error-name"></div>
                        </p>
                        <p>
                            <%=u.label :id_number, "학번"%>
                            <%=u.text_field :id_number, class: 'form-control text-center'%>
                            <div class="form-error error-id_num"></div>
                        </p>
                        <p>
                            <%=u.button :submit, "로그인", class: 'w-100 btn btn-orange'%>
                        </p>
                    </div>
                <%end%>
            </div>
        </div>
    </div>
</div>
