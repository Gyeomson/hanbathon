<div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" data-interval="false">
  <div class="carousel-inner">
    <div class="carousel-item active">
      <img class="d-block w-100" src="<%=asset_path 'marathon/road_background_img.png'%>" alt="First slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="<%=asset_path 'marathon/road_background_img.png'%>" alt="Second slide">
    </div>
    <div class="carousel-item">
      <img class="d-block w-100" src="<%=asset_path 'marathon/road_background_img.png'%>" alt="Third slide">
    </div>
  </div>
</div>

<script>

$( document ).ready(function() {
    
    var previousScroll = 0;
    
    $(window).scroll(function(){
       var currentScroll = $(this).scrollTop();
       if (currentScroll > previousScroll){
           console.log('down');
           alert('down');
       } else {
          alert('up');
       }
       previousScroll = currentScroll;
    });
    
});

    
</script>