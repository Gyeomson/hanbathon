
var $name = $('.error-name');
var $email = $('.error-email');
var $mobile = $('.error-mobile');
var $university = $('.error-university');
var $grade = $('.error-grade');
var $id_num = $('.error-id_num');
var $major = $('.error-major');

<%if @user.errors.any?%>
    <%if @user.errors[:name].any?%>
        $name.empty();
        $name.append("<%=@user.errors[:name].first%>");
    <%else%>
        $name.empty();
    <%end%>
    <%if @user.errors[:email].any?%>
        $email.empty();
        $email.append("<%=@user.errors[:email].first%>");
    <%else%>
        $email.empty();
    <%end%>
    <%if @user.errors[:mobile].any?%>
        $mobile.empty();
        $mobile.append("<%=@user.errors[:mobile].first%>");
    <%else%>
        $mobile.empty();
    <%end%>
    <%if @user.errors[:university].any?%>
        $university.empty();
        $university.append("<%=@user.errors[:university].first%>");
    <%else%>
        $university.empty();
    <%end%>
    <%if @user.errors[:grade].any?%>
        $grade.empty();
        $grade.append("<%=@user.errors[:grade].first%>");
    <%else%>
        $grade.empty();
    <%end%>
    <%if @user.errors[:id_number].any?%>
        $id_num.empty();
        $id_num.append("<%=@user.errors[:id_number].first%>");
    <%else%>
        $id_num.empty();
    <%end%>
    <%if @user.errors[:major].any?%>
        $major.empty();
        $major.append("<%=@user.errors[:major].first%>");
    <%else%>
        $major.empty();
    <%end%>
<%end%>
