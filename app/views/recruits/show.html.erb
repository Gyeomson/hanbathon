<%=render '/header'%>
<div class="bg-darkgray">
    <div class="container recruits-sign_up">
        <div class="header text-center py-4">
            <div class="h-60 mb-3">
                <img class="main-logo" src="<%=asset_path 'recruits/basiclogo_K_V.png'%>" alt="멋쟁이 사자처럼" />
            </div>
            <h1 class="white"><b><%=@user.name%>님의 지원서</b></h1>
        </div>
        <div class="main">
            <div class="form mx-auto bg-light p-4 bdr-3">
                <%=simple_form_for(@user, url: '#' , class: '') do |u| %>
                    <div class="text-center">
                        <div class=""></div>
                        <%=u.label :name, "이름"%>
                        <%=u.text_field :name, required: true, autocomplete: "off",class: 'form-control form-size text-center', readonly: true%>
                        </br>
                        <%=u.label :email, "이메일"%>
                        <%=u.email_field :email, required: true, autocomplete: "off", class: 'form-control text-center', readonly: true%>
                        </br>
                        <%=u.label :mobile, "휴대폰"%>
                        <%=u.text_field :mobile, required: true, autocomplete: "off", class: 'form-control text-center', placeholder: 'EX) 010-xxxx-xxxx', readonly: true%>
                        </br>
                        <%=u.label :university, "학교"%>
                        <%=u.text_field :university, required: true, class: 'form-control text-center', readonly: true%>
                        </br>
                        <%=u.label :grade, "학년"%>
                        <%=u.text_field :grade, required: true, class: 'form-control text-center', readonly: true%>
                        </br>
                        <%=u.label :id_number, "학번"%>
                        <%=u.text_field :id_number, required: true, autocomplete: "off", class: 'form-control text-center', readonly: true%>
                        </br>
                        <%=u.label :major, "전공"%>
                        <%=u.text_field :major, required: true, autocomplete: "off", class: 'form-control text-center', readonly: true%>
                        </br>
                        <p class="text-left">
                            <%=u.label :text1, "Q1. 멋쟁이 사자처럼을 알게된 경로와 지원동기를 적어주세요", class: 'px-3'%>
                            <%=u.text_area :text1, rows: 5, class: 'form-control', readonly: true%>
                        </p>
                        <p class="text-left">
                            <%=u.label :text2, "Q2. 자신이 만들고 싶은 서비스를 설명해주세요", class: 'px-3'%>
                            <%=u.text_area :text2, rows: 5, class: 'form-control', readonly: true%>
                        </p>
                        <p class="text-left">
                            <%=u.label :text3, "Q3. 프로젝트를 완수한 경험을 적어주세요", class: 'px-3'%>
                            <%=u.text_area :text3, rows: 5, class: 'form-control', readonly: true%>
                        </p>
                        <p class="text-left">
                            <%=u.label :text4, "Q4. 프로그래밍 강의 혹은 경험이 있다면 적어주세요", class: 'px-3'%>
                            <%=u.text_area :text4, rows: 5, class: 'form-control', readonly: true%>
                        </p>
                        <div class="">
                            <%=link_to "수정하기", user_edit_path(@user.id, @user.name) , class: "w-44 btn btn-primary"%>
                            <%=link_to "삭제하기", user_destroy_path(@user.id, @user.name), method: :delete , class: "w-44 btn btn-danger", data: { confirm: "삭제하시겠습니까?" }%>
                        </div>
                        </br>
                        <%=link_to "제출하기", recruits_path , class: "w-90 btn btn-orange", data: { confirm: "제출하시겠습니까?" }%>
                        </br>
                    </div>
                <%end%>
            </div>
            </br></br></br></br></br></br></br>
        </div>
    </div>
</div>
